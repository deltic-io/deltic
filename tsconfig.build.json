{
    "include": [
        "bin/**/*",
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist/",
        "rootDir": "./src/",
        "strict": true,
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true
    }
}
